package com.example.todo.entity;

import javax.persistence.*;
import javax.validation.constraints.NotBlank;

/**
 * This is the "Model".
 * The @Entity annotation tells Hibernate to map this class
 * to a table named 'todos'.
 */
@Entity
@Table(name = "todos")
public class Todo {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @NotBlank(message = "Task cannot be blank")
    @Column(nullable = false)
    private String task;

    private String description;

    private boolean completed = false; // Default to false

    // --- Getters and Setters ---
    // (Required by JPA/Hibernate and for JSON serialization)

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getTask() {
        return task;
    }

    public void setTask(String task) {
        this.task = task;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public boolean isCompleted() {
        return completed;
    }

    public void setCompleted(boolean completed) {
        this.completed = completed;
    }
}
